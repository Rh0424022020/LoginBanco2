            android:onClick="accion"
            android:text="Retirar Dinero" />

        <RadioButton
            android:id="@+id/rb_Salir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="accion"
            android:text="Salir" />
    </RadioGroup>

    <RadioButton
